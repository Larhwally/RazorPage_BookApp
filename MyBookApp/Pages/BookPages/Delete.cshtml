@page
@model MyBookApp.Pages.BookPages.DeleteModel
@{
}
<br />
<h1 class="text-info">Delete</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<form method="post">
    <input type="hidden" asp-for="singlebook.id" />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-3">
            <label>Book Title</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.bookTitle" class="form-control" />
        </div>
        <span asp-validation-for="singlebook.bookTitle" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label>Author Name</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.authorName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label>Publish Year</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.publishYear" class="form-control" />
        </div>
        <span asp-validation-for="singlebook.publishYear" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label>ISBN number</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.ISBN" class="form-control" />
        </div>
        <span asp-validation-for="singlebook.ISBN" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label>Create Date:</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.createDate" class="form-control" />
        </div>
        <span asp-validation-for="singlebook.createDate" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <label>Created BY:</label>
        </div>
        <div class="col-6">
            <input asp-for="singlebook.createdBy" class="form-control" />
        </div>
        <span asp-validation-for="singlebook.createdBy" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3 offset-3">
            <input type="submit" value="Delete" class="btn btn-danger form-control" />
        </div>
        <div class="col-3">
            <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
        </div>
    </div>
</form>