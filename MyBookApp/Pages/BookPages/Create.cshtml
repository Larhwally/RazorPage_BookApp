<div class="border container" style="padding:30px">

    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

         <div class="form-group row">
            <div class="col-3">
                <label>Choose file:</label>
            </div>
            <div class="col-6">
                <input type="file" asp-for="file" class="form-control" />
            </div>
           @* <div class="col-3">
                <input type="submit" value="Insert" class="btn btn-success" />
            </div>*@
            @*<span asp-validation-for="Book.bookTitle" class="text-danger"></span>*@
        </div>
        <hr />
       

        <div class="form-group row">
            <div class="col-3">
                <label>Book Title</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.bookTitle" class="form-control" />
            </div>
            <span asp-validation-for="Book.bookTitle" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Author Name</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.authorName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Publish Year</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.publishYear" class="form-control" />
            </div>
            <span asp-validation-for="Book.publishYear" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>ISBN number</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>

       

        <div class="form-group row">
            <div class="col-3">
                <label>Created BY:</label>
            </div>
            <div class="col-6">
                <input asp-for="Book.createdBy" class="form-control" />
            </div>
            <span asp-validation-for="Book.createdBy" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>