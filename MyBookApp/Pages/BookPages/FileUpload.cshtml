@page
@model MyBookApp.Pages.BookPages.FileUploadModel
@{
}
<h1 class="text-info">Upload a file</h1>
<div class="form-data row">
<form method="post" enctype="multipart/form-data">
	 <div class="form-group row">
            <div class="col-3">
                <label>Choose file:</label>
            </div>
            <div class="col-6">
                <input type="file" asp-for="myFile" class="form-control" />
            </div>
            <div class="col-3">
                <input type="submit" value="Insert" class="btn btn-success" />
            </div>
            @*<span asp-validation-for="Book.bookTitle" class="text-danger"></span>*@
        </div>
        <div class="form-group row">
            <div class="col-6">
                <div class="col-3">
                <input type="submit" value="View image" class="btn btn-success" />
                </div>
                <div class="col-6">
                    <input type="image" asp-for="myFile" />
                </div>
            </div>
        </div>

</form>
	
</div>