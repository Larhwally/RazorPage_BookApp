@page
@model MyBookApp.Pages.BookPages.EditModel
@{
}


<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="singlebook.id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <select id="select1" asp-items="@(new SelectList(Model.Books, "id", "bookTitle"))">
                    <option selected disabled>choose a book</option>
                   
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <img src="@Model.fileName" />
            </div>
             <div class="col-6">
                <img src="C:\MYPROJECTS\.NET Core Tut\TutorialNetCore\MyBookApp\MyBookApp\FIles\dope.jpg" style="height:400px; width:400px" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Book Title</label>
            </div>
            <div class="col-6">
                <input asp-for="singlebook.bookTitle" class="form-control" />
            </div>
            <span asp-validation-for="singlebook.bookTitle" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Author Name</label>
            </div>
            <div class="col-6">
                <input asp-for="singlebook.authorName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Status</label>
            </div>
            <div class="col-6">
                <select asp-for="singlebook.status" class="form-control">
                    <option selected disabled>Select status</option>
                    <option>Borrowed</option>
                    <option>Available</option>

                </select>
            </div>
            <span asp-validation-for="singlebook.status" class="text-danger"></span>
        </div>

       

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Save changes" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>